                //- end catalog__item

                //- start catalog__item
                .catalog__item

                    a(href="#").catalog__img
                        img(src="../../img/catalog.jpg", alt="alt")
                    a(href="#").catalog__title Доильный аппарат ТК 2-РК для коров
                    .catalog__boolean.false Под заказ
                    .catalog__price
                        ins
                            span.woocommerce-Price-amount.amount
                                bdi 2000 <span class="woocommerce-Price-currencySymbol">руб.<span>

                    .catalog__btn
                        a.btn(href="#") В корзину

                //- end catalog__item

                //- start catalog__item
                .catalog__item.sale
                    .catalog__info 
                        span -25%
                    a(href="#").catalog__img
                        img(src="../../img/catalog.jpg", alt="alt")
                    a(href="#").catalog__title Доильный аппарат ТК 2-РК для коров
                    .catalog__boolean В наличии
                    //- .catalog__boolean.false Под заказ
                    .catalog__price
                        ins
                            span.woocommerce-Price-amount.amount
                                bdi 2000 <span class="woocommerce-Price-currencySymbol">руб.<span>
                        del
                            span.woocommerce-Price-amount.amount
                                bdi 2000 <span class="woocommerce-Price-currencySymbol">руб.<span>


                    .catalog__btn
                        a.btn(href="#") В корзину

