extends ../../layout/layout.pug

block variable
    -var path = '../../';


    //- (style="background-image: url('../../img/preview_bg.webp')")


block content
    // begin preview
    section#preview.preview.section
        .container_center
            .preview__slider
                .swiper.swiper_single_js
                    .swiper-wrapper
                        each item in ['', '', '', '' ]
                            .swiper-slide
                                .preview__content
                                    .preview__img.img
                                        img.desktop(src="../../img/preview_bg.webp" alt="alt")
                                        img.mobile(src="../../img/preview_bg_m.webp" alt="alt")
                                    .preview__title
                                        span Доильный аппарат ТК 2-РК для коров
                                    .preview__btn
                                        a.btn(href="#") Узнать больше


                    .swiper__dotted
                .swiper__arrows
                    i.icon_arrow_left
                    i.icon_arrow_right

    // end preview

    // begin advantage
    section#advantage.advantage.section
        .container_center
            .advantage__list
                each item in [ {img: '1', title: 'Прямые поставки от производителя', text: 'Доставляем товар напрямую от Турецкого производителя Melasty'}, {img: '2', title: 'Доставим товар за 1-3 дня', text: 'Службой доставки или сможете забрать товар сами у нас со склада'}, {img: '3', title: 'Личный менеджер на связи с вами 24/7', text: 'Стараемся дать вам лучший сервис и профессионализм от нашей команды'}, {img: '4', title: 'Гарантия на товар от 12 до 60 месяцев', text: 'В течение этого срока сможем отремонтировать или обменять товар на другой'} ]

                    .advantage__item
                        .advantage__img.img
                            img(src="../../img/advantage_"+item.img+".png", alt="alt")
                        .advantage__title=item.title
                        .advantage__text=item.text

    // end advantage

    // begin subcategories
    section#subcategories.subcategories.section
        .container_center
            h2.section__title
                span Популярные подкатегории
            .subcategories__list
                each item in [{img: '1', quantity: '13', title: 'Доильные аппараты для коров' }, {img: '2', quantity: '9', title: 'Доильные аппараты для коз и овец' }, {img: '3', quantity: '40', title: 'Комплектующие к доильным аппаратам' } ]

                    a.subcategories__item(href="#")

                        .subcategories__img.img
                            img(src="../../img/subcategories_"+item.img+".webp" alt="alt")
                        .subcategories__content
                            .subcategories__quantity
                                span=item.quantity 
                                span  товаров
                            .subcategories__title=item.title

    // end subcategories
